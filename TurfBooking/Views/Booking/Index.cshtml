@model List<TurfBooking.Models.SlotList>

<h2>Booking For @ViewBag.BookingDate</h2>

<input class="btn btn-primary" type="button" value="Cancel" onclick="location.href = '/Home/Index'" />

<br/>
<br />
<br />


   



<table id="table_id" class="table">
    <thead class="thead-light">
        <tr>
            <th scope="col">Time Slot</th>
            <th scope="col">Ground 1</th>
            <th scope="col">Ground 2</th>
            <th scope="col">Ground 3</th>
        </tr>
    </thead>
    <tbody>
        @{
            var TimeCount = 6;
            var GroundCount = 1;
            var BookingDate = @ViewBag.BookingDate;
            var SlotCount = 1;
        }
        @foreach (var instance in Model)
            {
                <tr>
                    @{
                    GroundCount = 1;
                }
                    <th scope="row">@instance.Time AM</th>
                <td class="y_n"><a class="btn" id="booklink_@SlotCount" href='@Url.Action("Delete", "View", new { Ground=@GroundCount, Time=@TimeCount, Date=@BookingDate })'>@instance.Ground1</a></td>
                @{
                    GroundCount++;
                    SlotCount++;
                }
                <td class="y_n"><a class="btn" id="booklink_@SlotCount" href='@Url.Action("Delete", "View", new { Ground=@GroundCount, Time=@TimeCount, Date=@BookingDate })'>@instance.Ground2</a></td>
                @{
                    GroundCount++;
                    SlotCount++;
                }
                <td class="y_n"><a class="btn" id="booklink_@SlotCount" href='@Url.Action("Delete", "View", new { Ground=@GroundCount, Time=@TimeCount, Date=@BookingDate })'>@instance.Ground3</a></td>
                @{SlotCount++;}
            </tr>
            TimeCount++;
            }
    </tbody>
</table>


<br/><br/>




    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.4.4/jquery.js"></script>

<script type="text/javascript">

   
    $(document).ready(function () {
        
        $('#table_id td.y_n').each(function () {
            
            if ($(this).text() == 'Slot Filled') {
                $(this).css('background-color', '#ff90a4');
            }
            if ($(this).text() == 'Book Now!') {
                $(this).css('background-color', '#ade3b1');

            }

    
        });
    });


</script>

